{
  "name": "copilot-carbon-tracker",
  "displayName": "AI Carbon Tracker",
  "description": "Track the carbon footprint of AI coding assistants (GitHub Copilot, Claude, Gemini, Grok, etc.)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilot-carbon-tracker.showStats",
        "title": "Show AI Carbon Stats",
        "category": "AI Carbon Tracker"
      },
      {
        "command": "copilot-carbon-tracker.reset",
        "title": "Reset AI Carbon Stats",
        "category": "AI Carbon Tracker"
      },
      {
        "command": "copilot-carbon-tracker.changeModel",
        "title": "Change AI Model",
        "category": "AI Carbon Tracker"
      },
      {
        "command": "copilot-carbon-tracker.export",
        "title": "Export Carbon Data",
        "category": "AI Carbon Tracker"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  }
}